{
  "name": "Anti Disturb",
  "description": "Blurs content on websites you may don't want to see",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "16": "/media/icon-16x16.png",
    "32": "/media/icon-32x32.png",
    "48": "/media/icon-48x48.png",
    "128": "/media/icon-128x128.png"
},
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/media/icon-16x16.png",
      "32": "/media/icon-32x32.png",
      "48": "/media/icon-48x48.png",
      "128": "/media/icon-128x128.png"
  }
  }
}